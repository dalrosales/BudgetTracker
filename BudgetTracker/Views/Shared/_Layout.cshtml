<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Budget Tracker</title>

    <!-- Styles -->
    <link href="http://localhost:1234/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/BudgetTracker.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column">
    <div class="d-flex flex-row">
        <nav class="d-flex flex-column flex-shrink-0 p-3 text-bg-dark">
            <a class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                <span class="fs-4 text-black">BudgetTracker</span>
            </a>
            <hr />
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">
                        <svg></svg>
                        Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Budgets" asp-action="Index">
                        <svg></svg>
                        Budgets
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Income" asp-action="Index">
                        <svg></svg>
                        Income
                    </a>
                </li>
            </ul>
        </nav>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Budget Tracker - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <!--<script src="~/dist/bundle.js"></script> //Production-->
    <script src="http://localhost:8080/bundle.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
