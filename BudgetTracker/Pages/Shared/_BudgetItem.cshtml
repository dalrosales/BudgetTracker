@model BudgetTracker.Models.BudgetItem

<div class="p-4 bg-white shadow rounded-lg flex justify-between items-center">
    <div>
        <h3 class="text-lg font-semibold">@Model.Category</h3>
        <p class="text-sm text-gray-500">Budgeted: $@Model.BudgetedAmount</p>
        <p class="text-sm text-gray-500">Actual: $@Model.ActualAmount</p>
    </div>
    <div class="text-right">
        <p class="text-sm">Difference: <span class="font-bold text-red-500">$(Model.BudgetedAmount - Model.ActualAmount)</span></p>
    </div>
</div>
