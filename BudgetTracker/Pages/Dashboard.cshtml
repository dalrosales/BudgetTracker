<script>
    document.addEventListener("DOMContentLoaded", function () {
        const ctx = document.getElementById("donut-chart-canvas").getContext("2d");

        const data = {
            labels: ["Rent", "Expenses", "Savings"],
            datasets: [{
                label: "Device Usage",
                data: [60, 25, 15],
                backgroundColor: [
                    "#1C64F2",
                    "#16BDCA",
                    "#9061F9"
                ],
                hoverOffset: 4
            }]
        };

        const config = {
            type: "doughnut",
            data: data,
            options: {
                cutout: "80%",
                plugins: {
                    legend: {
                        position: "bottom",
                        labels: {
                            color: "#9CA3AF" // Tailwind gray-400 for dark mode
                        }
                    }
                }
            }
        };

        new Chart(ctx, config);
    });
</script>
