@page
@model IndexModel
@{
    Layout = "_LandingLayout";
    ViewData["Title"] = "Home";
}

<div class="h-auto mb-4">
    <div class="mx-auto max-w-screen-xl px-4">
        <h1 class="mb-4 text-3xl font-extrabold text-gray-900 dark:text-white md:text-5xl lg:text-6xl">
            <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">BudgetTracker</span>
        </h1>
        <h1 class="mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 md:text-4xl lg:text-4xl dark:text-white">Smart budgeting <span class="underline underline-offset-3 decoration-8 decoration-green-400 dark:decoration-green-600">made simple.</span></h1>
        <div class="w-2x1">
            <p class="text-lg font-normal text-gray-500 lg:text-xl dark:text-gray-400">BudgetTracker helps you take control of your personal budget by giving you the tools to easily track income, expenses, and savings, all in one place. Manage your money effortlessly and make smarter financial decisions.</p>
        </div>
    </div>
    
    <section class="bg-transparent py-12 sm:py-16">
        <div class="mx-auto max-w-screen-xl px-4">
            <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-4">

                <!-- Customizable Budget Creation -->
                <div class="flex items-start gap-4 rounded-2xl border border-gray-200 bg-white/70 p-6 shadow-sm dark:border-gray-700 dark:bg-gray-800">
                    <div class="flex h-12 w-12 flex-none items-center justify-center rounded-xl bg-indigo-600/10">
                        <svg class="h-6 w-6 text-indigo-600 dark:text-indigo-400" viewBox="0 0 24 24" fill="none">
                            <path d="M4 7h16M4 12h8m-8 5h16" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Custom Budgets</h3>
                        <p class="mt-2 text-gray-600 dark:text-gray-300">
                            Create and organize budgets by category to match your unique financial needs.
                        </p>
                    </div>
                </div>

                <!-- Expense Tracking -->
                <div class="flex items-start gap-4 rounded-2xl border border-gray-200 bg-white/70 p-6 shadow-sm dark:border-gray-700 dark:bg-gray-800">
                    <div class="flex h-12 w-12 flex-none items-center justify-center rounded-xl bg-rose-600/10">
                        <svg class="h-6 w-6 text-rose-600 dark:text-rose-400" viewBox="0 0 24 24" fill="none">
                            <path d="M3 6h18M9 6v12m6-12v12M4 18h16" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Expense Tracking</h3>
                        <p class="mt-2 text-gray-600 dark:text-gray-300">
                            Log transactions and see exactly where your money is going in real time.
                        </p>
                    </div>
                </div>

                <!-- Income Tracking -->
                <div class="flex items-start gap-4 rounded-2xl border border-gray-200 bg-white/70 p-6 shadow-sm dark:border-gray-700 dark:bg-gray-800">
                    <div class="flex h-12 w-12 flex-none items-center justify-center rounded-xl bg-blue-600/10">
                        <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" viewBox="0 0 24 24" fill="none">
                            <path d="M12 3v18m0-18c4.418 0 8 3.582 8 8 0 2.389-1.056 4.533-2.724 6.016L12 21l-5.276-3.984A7.963 7.963 0 0 1 4 11c0-4.418 3.582-8 8-8z" stroke="currentColor" stroke-width="1.5" />
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Income Tracking</h3>
                        <p class="mt-2 text-gray-600 dark:text-gray-300">
                            Record and manage multiple income sources to stay on top of your earnings.
                        </p>
                    </div>
                </div>

                <!-- Goal Setting & Insights -->
                <div class="flex items-start gap-4 rounded-2xl border border-gray-200 bg-white/70 p-6 shadow-sm dark:border-gray-700 dark:bg-gray-800">
                    <div class="flex h-12 w-12 flex-none items-center justify-center rounded-xl bg-emerald-600/10">
                        <svg class="h-6 w-6 text-emerald-600 dark:text-emerald-400" viewBox="0 0 24 24" fill="none">
                            <path d="M4 20h16M4 14h16M4 8h16" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Goals & Insights</h3>
                        <p class="mt-2 text-gray-600 dark:text-gray-300">
                            Track progress toward savings or debt goals and visualize trends with charts.
                        </p>
                    </div>
                </div>

            </div>
        </div>
    </section>
</div>
